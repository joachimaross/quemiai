# Quemiai Backend Environment Example

# Server Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# Frontend URL for CORS (production should use actual domain)
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quemiai

# JWT Authentication
JWT_SECRET=your_jwt_secret_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Firebase
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Storage
STORAGE_ENDPOINT=your_storage_endpoint
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key

# Twitter API Keys (Optional)
TWITTER_APP_KEY=
TWITTER_APP_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# TikTok API Keys (Optional)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=

# Instagram API Keys (Optional)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_REDIRECT_URI=

# Google Cloud Storage (Optional)
GCS_BUCKET_NAME=
GCP_PROJECT_ID=
GCP_LOCATION=

# Redis (Optional - for caching and session management)
REDIS_URL=redis://localhost:6379

# OpenAI / AI Services (Optional)
OPENAI_API_KEY=

# Error Tracking - Sentry
# Sign up at https://sentry.io and create a new project
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_DEBUG=false
APP_VERSION=1.0.0

# OpenTelemetry Tracing
# For distributed tracing - requires a collector endpoint (e.g., Jaeger, Zipkin)
OTEL_SERVICE_NAME=quemiai-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_SDK_DISABLED=false
# Optional: Add authentication headers as JSON
# OTEL_EXPORTER_OTLP_HEADERS={"Authorization":"Bearer token"}

# Prometheus Metrics (if using push gateway)
PROMETHEUS_PUSH_GATEWAY=http://localhost:9091

