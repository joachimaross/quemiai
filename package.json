{
  "name": "quemiai-monorepo",
  "version": "1.0.0",
  "description": "QUEMI - Unified social media and messaging platform",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18 <21",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter @quemiai/backend dev",
    "web:dev": "pnpm --filter @quemiai/web dev",
    "web:build": "pnpm --filter @quemiai/web build",
    "mobile:dev": "pnpm --filter @quemiai/mobile start",
    "netlify:build": "pnpm install && pnpm --filter @quemiai/web build",
    "netlify:serve": "cd apps/web && pnpm start",
    "search:code": "grep -r --exclude-dir=node_modules --exclude-dir=.next --exclude-dir=dist --exclude-dir=.git",
    "search:files": "find . -type f -not -path '*/node_modules/*' -not -path '*/.next/*' -not -path '*/.git/*' -not -path '*/dist/*'",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "pnpm": "^8.15.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
