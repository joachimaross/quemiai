{
  "name": "quemiai-monorepo",
  "version": "1.0.0",
  "description": "QUEMI - Unified social media and messaging platform",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18 <21",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "backend:dev": "pnpm --filter @quemiai/backend dev",
    "web:dev": "pnpm --filter @quemiai/web dev",
    "mobile:dev": "pnpm --filter @quemiai/mobile start",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "pnpm": "^8.15.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
